/* --- CSS CHO MENU HAMBURGER & FOOTER (Thêm vào cuối thẻ style) --- */

/* 1. CSS cho nút Hamburger */
.hamburger-btn {
  display: none; /* Ẩn mặc định trên desktop */
  flex-direction: column;
  justify-content: space-around;
  width: 30px;
  height: 25px;
  background: transparent;
  border: none;
  cursor: pointer;
  padding: 0;
  z-index: 100; /* Đảm bảo nút luôn nằm trên */
}

.hamburger-btn span {
  width: 100%;
  height: 3px;
  background-color: var(--primary);
  border-radius: 3px;
  transition: all 0.3s ease-in-out;
}

/* Hiệu ứng khi mở menu (biến thành dấu X) */
.hamburger-btn.open span:nth-child(1) {
  transform: rotate(45deg) translate(5px, 5px);
}
.hamburger-btn.open span:nth-child(2) {
  opacity: 0;
}
.hamburger-btn.open span:nth-child(3) {
  transform: rotate(-45deg) translate(7px, -6px);
}


/* 2. Media Query để tối ưu Header & Footer cho Mobile */
@media (max-width: 980px) {
  /* Hiển thị nút hamburger */
  .hamburger-btn {
    display: flex;
  }

  /* Ẩn menu chính và căn chỉnh lại */
  nav#main-nav {
    display: none; /* Ẩn menu đi */
    position: absolute;
    top: 70px; /* Vị trí ngay dưới header */
    left: 0;
    width: 100%;
    background-color: var(--card);
    box-shadow: 0 8px 20px rgba(2,6,23,0.1);
    padding: 10px 0;
  }
  
  /* Khi menu được mở (thêm class 'open' bằng JS) */
  nav#main-nav.open {
    display: block; /* Hiện menu ra */
  }

  /* Ghi đè lại style cũ trong media query của bạn */
  nav ul {
    flex-direction: column;
    align-items: center; /* Căn giữa cho đẹp hơn */
    width: 100%;
  }

  nav ul li {
    width: 100%;
    text-align: center;
    margin: 5px 0;
  }
  
  nav a {
    display: block; /* Để link chiếm hết chiều rộng */
    padding: 12px 0;
  }
  
  .header-actions {
    display: none; /* Cân nhắc ẩn bớt thông tin phụ trên mobile */
  }

  /* Tối ưu Footer */
  footer .container > div {
    flex-direction: column;
    align-items: center; /* Căn giữa nội dung footer */
    gap: 16px;
  }
  
  footer .muted {
      text-align: center;
  }
}